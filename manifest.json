{
  "manifest_version": 2,

  "name": "Trakt stats",
  "short_name" : "trakttvstats",
  "description": "Add stats to Trakt.tv",
  "version": "0.1",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.trakt.tv/people/*"],
      "css": ["lib/chartist.min.css", "statify.css"],
      "js": ["lib/chartist.min.js", "statify.js"],
      "run_at": "document_end"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "icons": { "128": "icon.png" }
}
