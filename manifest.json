{
  "manifest_version": 2,

  "name": "Trakt improver",
  "short_name" : "trakttvstats",
  "description": "Add various improvements to Trakt.tv",
  "version": "0.1",
  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "https://trakt.tv/*"
  ],
  "content_scripts": [ {
      "matches": ["*://*.trakt.tv/people/*"],
      "css": ["lib/chartist.min.css", "statify.css"],
      "js": ["lib/chartist.min.js", "statify.js"]
    }, {
      "matches": ["*://*.trakt.tv/*"],
      "css": ["translate.css"]
    }
  ],
  "background": {
      "scripts": ["background.js"],
      "persistent": false
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "icons": { "128": "icon.png" }
}
